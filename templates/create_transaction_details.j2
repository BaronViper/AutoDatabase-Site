<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paul and Jeremy Autos Database</title>
</head>
<body>
    <header>
        <h1>Paul and Jeremy Autos Database</h1>
    </header>
    <nav>
        <a href="{{ url_for('root') }}">Cars</a>
        <a href="{{ url_for('customers') }}">Customers</a>
        <a href="{{ url_for('employees') }}">Employees</a>
        <a href="{{ url_for('transactions') }}">Transactions</a>
        <a href="{{ url_for('transaction_details') }}">Transaction Details</a>
        <a href="{{ url_for('transaction_types') }}">Transaction Types</a>
        <a href="{{ url_for('conditions') }}">Car Conditions</a>
    </nav>

    <h2>Create Transaction Details</h2>
    <form action="/create-transaction-details" method="post">
        <table>
            <tbody>
                <tr>
                    <th>Transaction ID</th>
                    <th>Car ID</th>
                    <th>Transaction Type</th>
                    <th>Unit Price</th>
                </tr>
                <tr>
                    <td>
                        <select name="transactions" id="">
                            <option value="1">Transaction 1</option>
                            <option value="2">Transaction 2</option>
                            <option value="3">Transaction 3</option>
                            <option value="4">Transaction 4</option>
                            <option value="5">Transaction 5</option>
                        </select>
                    </td>
                    <td>
                        <select name="cars" id="">
                            <option value="1">Toyota Camry - ID: 1</option>
                            <option value="2">Ford Mustang - ID: 2</option>
                            <option value="3">Honda Civic - ID: 3</option>
                            <option value="4">Chevrolet Tahoe - ID: 4</option>
                            <option value="5">BMW X5 - ID: 5</option>
                        </select>
                    </td>
                    <td>
                        <select name="type" id="">
                            <option value="1">Sale</option>
                            <option value="2">Lease</option>
                        </select>
                    </td>
                    <td><input type="text" name="cost"></td>
                    <td>
                        <button type="submit">Create</button>
                        <a href="{{ url_for('transaction_details') }}">Cancel</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>


</body>
</html>