<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paul and Jeremy Autos Database</title>
</head>
<body>
    <header>
        <h1>Paul and Jeremy Autos Database</h1>
    </header>
    <nav>
        <a href="{{ url_for('root') }}">Cars</a>
        <a href="{{ url_for('customers') }}">Customers</a>
        <a href="{{ url_for('employees') }}">Employees</a>
        <a href="{{ url_for('transactions') }}">Transactions</a>
        <a href="{{ url_for('transaction_details') }}">Transaction Details</a>
        <a href="{{ url_for('transaction_types') }}">Transaction Types</a>
        <a href="{{ url_for('conditions') }}">Car Conditions</a>
    </nav>
    
    <h2>Browse All Transaction Details</h2>
    <table border="1" cellspacing="5">
        <tbody>
            <tr>
                <th>Transaction Details ID</th>
                <th>Transaction ID</th>
                <th>Car ID</th>
                <th>Transaction Type</th>
                <th>Unit Price</th>
            </tr>
            {% for detail in data %}
            <tr>
                <td>{{ detail['transactionDetailsID'] }}</td>
                <td>{{ detail['transactionID'] }}</td>
                <td>{{ detail['carID'] }}</td>
                <td>{{ types[detail['transactionTypeID']] }}</td>
                <td>${{ detail['unitPrice'] }}</td>
                <td>
                    <a href="{{ url_for('edit_details', transactionDetailsID = detail['transactionDetailsID']) }}">Edit</a>
                    <a href="{{ url_for('delete_details', transactionDetailsID = detail['transactionDetailsID'])}}">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ url_for('create_details') }}">Create Transaction Details</a>
</body>
</html>
