<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paul and Jeremy Autos Database</title>
</head>
<body>
    <header>
        <h1>Paul and Jeremy Autos Database</h1>
    </header>
    <nav>
        <a href="{{ url_for('root') }}">Cars</a>
        <a href="{{ url_for('customers') }}">Customers</a>
        <a href="{{ url_for('employees') }}">Employees</a>
        <a href="{{ url_for('transactions') }}">Transactions</a>
        <a href="{{ url_for('transaction_details') }}">Transaction Details</a>
        <a href="{{ url_for('transaction_types') }}">Transaction Types</a>
        <a href="{{ url_for('conditions') }}">Car Conditions</a>
    </nav>
    
    <h2>Browse Car Conditions</h2>
    <table border="1" cellspacing="5">
        <tbody>
            <tr>
                <th>Car Condition ID</th>
                <th>Description</th>
                <th>Modify</th>
            </tr>
            {% for condition in data %}
                <tr>
                    <td>{{ condition['conditionID'] }}</td>
                    <td>{{ condition['description'] }}</td>
                    <td>
                        <a href="{{ url_for('edit_condition', conditionID=condition['conditionID']) }}">Edit</a>
                        <a href="{{ url_for('delete_condition', conditionID=condition['conditionID']) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ url_for('create_condition') }}">Create Car Condition</a>
</body>
</html>
